<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

    <ImageView
            android:id="@+id/iv_maim_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/image_view"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
    <ImageView
            android:id="@+id/iv_maim_image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/image_view"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"/>

    <com.yqritc.scalablevideoview.ScalableVideoView
            android:id="@+id/svv_main_video1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:scalableType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

    <com.yqritc.scalablevideoview.ScalableVideoView
            android:id="@+id/svv_main_video2"
            android:layout_width="0dp"
            app:scalableType="fitCenter"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <AnalogClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="8dp"
            android:alpha="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/tv_main_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/file_name"
                android:text="@string/file_name"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/tv_main_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/file_date"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/file_date"/>

    </LinearLayout>
    <TextView
            android:id="@+id/tv_main_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>